<Window x:Class="Exercise1.ShowThuKhoa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise1"
        mc:Ignorable="d"
        Title="ShowThuKhoa" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cbYear" HorizontalAlignment="Center" Height="51" Margin="0,54,0,0" VerticalAlignment="Top" Width="144" FontSize="20"/>
        <DataGrid x:Name="dgvShowThuKhoa" HorizontalAlignment="Center" Height="214" Margin="0,154,0,0" VerticalAlignment="Top" Width="724" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="btnShow" Content="Show" HorizontalAlignment="Left" Height="43" Margin="519,58,0,0" VerticalAlignment="Top" Width="80" FontSize="20" Click="btnShow_Click"/>

    </Grid>
</Window>
